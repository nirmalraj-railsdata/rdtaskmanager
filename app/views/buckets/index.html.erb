<html style="background-color:#b8b894;">
<center>
<h1 style="background-color: #00ff80;color:DodgerBlue">Buckets</h1>
<p style = "color:white">------------------------------------------------------------------------------------</p>
  <b style="color:white">|</b>

  <b> <%= link_to 'New buckets', new_bucket_path %> </b>
  <b style="color:white">|</b>
  <b><%= link_to 'Back ', controller: 'welcome' %></b>
    <b style="color:white">|</b>

<p style = "color:white">------------------------------------------------------------------------------------</p>
<table>  
<%= form_with scope: :bucket, url: buckets_path, local: true do |form| %>
<% end %>
  <tr>
    <th >Name</th>
    <th style="color:#ffffff;">|</th>
    <th>Description</th>

  </tr>
 
  <% @buckets.each do |bucket| %>
    <tr>
      <td><%= bucket.name %></td>
      <td style="color:#ffffff;">|</td>
      <td><%= bucket.description %></td>
      <td style="color:#ffffff;"> | </td>
      <td><%= link_to 'Show', bucket_path(bucket) %></td>
      <td style="color:#ffffff;"> | </td>
            <td><%= link_to 'Edit', edit_bucket_path(bucket) %></td>
            <td style="color:#ffffff;"> | </td>
                  <td><%= link_to 'Delete', bucket_path(bucket),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>

</table>
</center>
</html>